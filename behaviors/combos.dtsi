// Combos
//#undef COMBO_TERM
//#define COMBO_TERM 40  // timeout of 40ms (default is 30ms if omitted)
//#define HR_TIMEOUT 30  // timeout on homerow is better a bit shorter

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30
#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50


/***********************
  ALL LAYERS
***********************/

// NOTE: Other mouse keys related combos in ./mouse.dtsi

/***********************
  BASE LAYER
***********************/
ZMK_COMBO(cut, &kp LC(X), LB3 LB4, Base Nav Fun Game Mouse)                       // CUT - Ctrl + X, active on base layer
ZMK_COMBO(copy, &kp LC(C), LB2 LB3, Base Nav Fun Game Mouse)                      // COPY - Ctrl + C, active on base layer
ZMK_COMBO(paste, &kp LC(V), LB1 LB2, Base Nav Fun Game Mouse)                     // PASTE - Ctrl + V, active on all layers
ZMK_COMBO(printscreen, &kp PRINTSCREEN, RT3 RT4, Base Nav Fun Game Mouse)         // PRINT SCREEN - PrintScreen, active on base layer
ZMK_COMBO(capsword, &caps_word, LM1 RM1, Base Nav Fun Game Mouse)                 // CAPS WORD - Both HR Shifts, active on base & accent layers
ZMK_COMBO(capslock, &kp CAPSLOCK, LM2 RM2, Base Nav Fun Game Mouse)               // CAPS LOCK - Both HR Controls, active on base & accent layers


/***********************
  SYMBOL LAYER
***********************/

// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous chording of mods. Custom hold-tap instances can be bootstrapped on the go using the
// 8-argument version of ZMK_COMBO defined in base.keymap.
ZMK_COMBO(ldr, &leader, LM2 LM1, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LCTRL), KEYS_R)
ZMK_COMBO(ldrsh, &leader_sft,  LM3 LM2 LM1, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LC(LALT)), KEYS_R)

