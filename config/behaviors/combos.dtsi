#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50



// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous chording of mods. Custom hold-tap instances can be bootstrapped on the go using the
// 8-argument version of ZMK_COMBO defined in base.keymap

//ZMK_COMBO(ldr, &leader, 12 13, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LCTRL), KEYS_R)
//ZMK_COMBO(ldrsh, &leader_sft,  11 12 13, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LC(LALT)), KEYS_R)
//ZMK_COMBO(mouse, &smart_mouse, LT2 LT1, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)



// Horizontal combos - left hand
ZMK_COMBO(esc, &kp ESC, LT4 LT3, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(capslock, &kp CAPSLOCK, LM2 RM2, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(cut, &kp LC(X), LB3 LB4, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy, &kp LC(INS), LB2 LB3, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste, &kp LS(INS), LB1 LB2, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)

// Horizontal combos - right hand
ZMK_COMBO(lpar, &kp LPAR, RM1 RM2, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rpar, &kp RPAR, RM2 RM3, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lt, &kp LT, RM1 RM2, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(gt, &kp GT, RM2 RM3, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(lbkt, &kp LBKT, RB1 RB2, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbkt, &kp RBKT, RB2 RB3, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lbrc, &kp LBRC, RB1 RB2, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbrc, &kp RBRC, RB2 RB3, Base Nav Fun Game Mouse, COMBO_TERM_FAST, COMBO_IDLE_FAST)

// Vertical combos - left hand
ZMK_COMBO(at, &kp AT, LT3 LM3, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(hash, &kp HASH, LT2 LM2, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(dllr, &kp DLLR, LT1 LM1, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(prcnt, &kp PRCNT, LT0 LM0, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(grave, &kp GRAVE, LM3 LB3, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(bslh, &kp BSLH, LM2 LB2, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(equal, &kp EQUAL, LM1 LB1, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(tilde, &kp TILDE, LM0 LB0, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

// Vertical combos - right hand
ZMK_COMBO(caret, &kp CARET, RT0 RM0, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(plus, &kp PLUS, RT1 RM1, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(star, &kp STAR, RT2 RM2, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(amps, &kp AMPS, RT3 RM3, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(under, &kp UNDER, RM0 RB0, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(minus, &kp MINUS, RM1 RB1, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(fslh, &kp FSLH, RM2 RB2, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(pipe, &kp PIPE, RM3 RB3, Base Nav Fun Game Mouse, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)